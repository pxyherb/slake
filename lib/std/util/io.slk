module std.util.io;

pub enum SeekMode : u8 {
	SET = 0,
	END,
	CUR
}

pub interface IBasicStream {
	usize size();
	void seek(@SeekMode mode, isize off);
	isize tell();
}

pub interface IInputStream : @IBasicStream {
	byte[] read(usize nBytes);
}

pub interface IOutputStream : @IBasicStream {
	usize write(byte[] data);
}

pub interface IStream : @IInputStream, @IOutputStream {
}
