module std.core.task;

pub enum State : u8 {
	DEAD = -1,
	ALIVE,
	DONE
}

pub class Task {
	pub native @State getState(utask task);
	pub native const Task current;

	pub native operator new();
	pub native operator delete();

	pub native bool resume();
}
